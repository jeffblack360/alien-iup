- add IPC::Run3 + this sub
sub do_system_strip_output {
  my ($self, @cmd) = @_;
  my $output;
  my $rv = run3 \@cmd, \undef, \$output, \$output;
  $output = substr $output, -1000; # we want just last 1000 chars
  print "do_system_strip_output:\n", $output, "\n";
  return $rv;
}

